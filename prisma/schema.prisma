generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  emailVerified DateTime? @map("email_verified")
  image         String?
  posts         Post[]
  projects      Project[]
  accounts      Account[]
  sessions      Session[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image     String?
  resume    String?
  author    User     @relation(fields: [authorId], references: [id])
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  content     String?
  link        String?
  authorId    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  content2    String?
  image2      String?
  resume      String?
  image       String?
  image2Title String?
  imageTitle  String?
  author      User     @relation(fields: [authorId], references: [id])
}

model Link {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  tag         String?
  link        String?
  image       String?
}

model Message {
  id      Int    @id @default(autoincrement())
  name    String
  email   String
  message String
}

model Account {
  id                String  @id @default(cuid())
  userId            Int     @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       Int      @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Action {
  id            Int      @id @default(autoincrement())
  name          String
  ticker        String
  price         Float
  purchasePrice Float
  pe            Float?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  quantity      Float
  userId        Int?      @default(1)
  where         String?
  dividendYield Float?
}
